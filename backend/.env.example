# Language Teacher - Environment Configuration
# Copy this file to .env and fill in your values
# 
# cp .env.example .env

# =============================================================================
# LLM Provider API Keys (add the ones you want to use)
# =============================================================================


GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Default LLM Settings
# =============================================================================

# Default provider: ollama, gemini, openai, anthropic
DEFAULT_LLM_PROVIDER=gemini

# Default model name
# Gemini: gemini-2.0-flash-exp, gemini-1.5-flash, gemini-1.5-pro
# Ollama: german-teacher, llama3.2, mistral
# OpenAI: gpt-4, gpt-3.5-turbo
# Anthropic: claude-3-sonnet-20240229
DEFAULT_LLM_MODEL=gemini-2.0-flash-exp

# Ollama base URL (only needed if using Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Whisper Speech-to-Text Settings
# =============================================================================

# Whisper model: tiny, base, small, medium, large
WHISPER_MODEL=base

# Default language for speech recognition
# de = German, en = English, es = Spanish, fr = French, etc.
WHISPER_LANGUAGE=de

# =============================================================================
# Database & Storage
# =============================================================================

# SQLite database path
DATABASE_PATH=language_teacher.db

# Audio uploads directory
AUDIO_UPLOAD_DIR=./audio_uploads

# =============================================================================
# OCR (Tesseract) - for Document Mode image uploads
# =============================================================================

# Windows only
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe
